<resources>

    <!-- Base Splash Screen application theme -->
    <style name="StartingAppTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_logo</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <!-- Base application theme -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- App Font -->
        <item name="android:fontFamily">@font/roboto_light</item>
        <!-- Disable overScrollMode -->
        <item name="android:overScrollMode">never</item>
    </style>

    <!-- Light application theme -->
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_app_color</item>
        <item name="colorPrimaryVariant">@color/primary_app_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/primary_app_color</item>
        <item name="colorSecondaryVariant">@color/primary_app_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Window background color -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>

        <item name="alertDialogTheme">@style/MyAlertDialogStyle</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/MyButtonBar</item>
        <item name="android:windowSoftInputMode">stateUnchanged</item>
    </style>

    <style name="MyButtonBar" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_app_color</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>

</resources>