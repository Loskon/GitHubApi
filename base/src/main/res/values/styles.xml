<resources>

    <style name="RoundedBottomSheetStyle" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="colorPrimary">@color/primary_app_color</item>
        <item name="bottomSheetStyle">@style/RoundBackgroundStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="RoundBackgroundStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/sheet_bg_round_corner</item>
    </style>

    <style name="ToolbarTextFont">
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/ButtonBarStyle</item>
        <item name="android:windowSoftInputMode">stateUnchanged</item>
    </style>

    <style name="ButtonBarStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_app_color</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
    </style>


    <style name="PreferenceScreenTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:layout">@layout/fragment_settings</item>
    </style>
</resources>